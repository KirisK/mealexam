@model Public.DTO.v1.UserProduct

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit @Model.Product!.ProductName amount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AvailableAmount" class="control-label"></label>
                <input asp-for="AvailableAmount" class="form-control" />
                <span asp-validation-for="AvailableAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Units" class="control-label"></label>
                <input asp-for="Units" class="form-control" />
                <span asp-validation-for="Units" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="AppUserId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Product" asp-action="Index">Back to products</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
